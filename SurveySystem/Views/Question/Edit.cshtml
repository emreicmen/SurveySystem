@model SurveySystem.Models.Question
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-body">
        <div class="card-title">Question Editing Page</div>
        <hr>
        <form action="/Question/Edit" method="post">
            <input type="hidden" name="Id" value="@Model.Id"/>
            <div class="form-group">
                <label for="input-1">Question : </label>
                <input type="text" class="form-control" name="QuestionLine" id="input-1" placeholder="Type Question" maxlength="250" required value="@Model.QuestionLine">
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-round btn-success px-5"><i class="icon-lock"></i>Edit</button>
            </div>
        </form>
    </div>
</div>

