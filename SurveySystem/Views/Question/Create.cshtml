
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-body">
        <div class="card-title">Question Adding Page</div>
        <hr>
        <form action="/Question/Create">
            <div class="form-group">
                <label for="input-1">Question : </label>
                <input type="text" class="form-control" name="QuestionLine" id="input-1" placeholder="Type Question" maxlength="250" required>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-round btn-success px-5"><i class="icon-lock"></i>Add</button>
            </div>
        </form>
    </div>
</div>

